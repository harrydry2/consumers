include mixins/_logo
include mixins/_priceContainer


doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/dist/bundle.css')
    title Sites For Musicians
    script(src="https://js.stripe.com/v3/")
    script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-91909305-4')
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-91909305-4');
  body
    .p1Container
      .p1Background
      +logo
      .mainContainer
        h1 High Quality Websites for Musicians
        h2 Order now, and youâ€™re site will be ready in 24 hours
        +priceContainer
    .modalOuterContainer
      .modalInnerContainer
        .modalInnerTitleContainer
          div.miTitle.header The Original Plan
          div.miTitle.plan $14 / mo
        form.modalInnerInnerContainer(action="/charge" method="POST" id="payment-form")
          .mIICHeader Details
          .detailsContainer
            input(type="text" name="stripeName" class="formInput" placeholder="Full Name")
            input(type="text" name="stripeEmail" class="formInput" placeholder="Email Address")
          #card-element
          #card-errors(role="alert")
          .mIICHeader Charges
          .chargesContainer
            .lightCharge Price
            .lightCharge $14.00
          .chargesContainer.chargesContainerHidden
            .lightCharge.hiddenCharge Discount
            .lightCharge.hiddenCharge 25% off forever            
          div.chargesContainer.noBorderBottom
            .lightCharge Amount Due
            .heavyCharge $14.00
          .couponContainer             
            div.mIICHeader.mIICCoupon Enter a Coupon Code
            .couponInputContainer
              input(type="text" name="stripeCoupon" class="formInput couponInput" placeholder="Coupon")
              != h.icon('refresh')
              div.couponFM               
          button.mIButton Buy Now
          .sslContainer
            != h.icon('padlock')
            .sslText Secure SSL Payment via Stripe
      block scripts
        script(src="/dist/bundle.js")